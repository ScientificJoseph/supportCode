{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "off",
            "always"
        ],
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-useless-escape": "off",
        "no-constant-condition": "off",
        "no-fallthrough": "off"
    }
}